<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/watercolor"
    tools:context=".fragments.MerchantProfileFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:hint="Naziv Trgovine"
            android:id="@+id/merchantStoreNameTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:hint="Ime"
            android:id="@+id/merchantFirstNameTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:hint="Prezime"
            android:id="@+id/merchantLastNameTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:hint="Telefon"
            android:id="@+id/merchantPhoneTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:hint="Adresa"
            android:id="@+id/merchantAddressTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:hint="Grad"
            android:id="@+id/merchantCityTxt"
            />

        <Button
            android:id="@+id/saveMerchantBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snimi Promjene"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/aqua"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>