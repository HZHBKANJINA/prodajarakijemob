<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CustomerProfileFragment"
    android:background="@color/watercolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:text="Ime"
            android:id="@+id/customerFirstNameTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:text="Prezime"
            android:id="@+id/customerLastNameTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:text="Telefon"
            android:id="@+id/customerPhoneTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:text="Adresa"
            android:id="@+id/customerAddressTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="32dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:padding="18dp"
            android:background="@drawable/rounded_corner"
            android:text="Grad"
            android:id="@+id/customerCityTxt"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/aqua"
            android:textColor="@color/black"
            android:padding="18dp"
            android:textSize="20sp"
            app:cornerRadius="24dp"
            android:text="Spremi profil"
            android:id="@+id/saveCustomerBtn"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>